<CustButton@Button>:
	font_size_hint: 1

<CalcLayout>
	id: calculator
	display: entry
	rows: 6
	padding: 10
	spacing: 10

	BoxLayout:
		TextInput:
			hint_text: "0"
			halign: "right"
			id: entry
			font_size_hint: 48
			multiline: True

	BoxLayout:
		spacing: 10
		CustButton:
			text: "C"
			on_press: entry.text = ""
			
		CustButton:
			text: "<-"
			on_press: calculator.backspace(entry.text)
		CustButton:
			text: "("
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: ")"
			on_press: calculator.checker(self.text, entry.text)

	BoxLayout:
		spacing: 10
		CustButton:
			text: "7"
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "8"
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "9"
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "/"
			on_press: calculator.checker(self.text, entry.text)

	BoxLayout:
		spacing: 10
		CustButton:
			text: "4"
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "5"
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "6"
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "*"
			on_press: calculator.checker(self.text, entry.text)

	BoxLayout:
		spacing: 10
		CustButton:
			text: "1"
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "2"
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "3"
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "-"
			on_press: calculator.checker(self.text, entry.text)

	BoxLayout:
		spacing: 10
		CustButton:
			text: "."
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "0"
			on_press: calculator.checker(self.text, entry.text)
		CustButton:
			text: "="
			on_press: calculator.calculate(entry.text)
		CustButton:
			text: "+"
			on_press: calculator.checker(self.text, entry.text)
